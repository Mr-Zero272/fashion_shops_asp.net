@model IEnumerable<FashionShops.Product_Reviewing>
@{
    ViewBag.Title = "ReviewingTable";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Review Table</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row" style="margin-bottom: 20px;">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    DataTables Advanced Tables
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Customer ID</th>
                                    <th>Product name</th>
                                    <th>Rating</th>
                                    <th>Content</th>
                                    <th>Published at</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="">
                                        <td class="center">@item.user_id</td>
                                        <td class="product_name">@item.Product.name</td>
                                        <td class="center">@item.rating</td>
                                        <td>@item.content</td>
                                        <td class="center">@item.publishedAt</td>
                                        <td class="center">
                                            <a href="/Admin/Table/DetailReviewing?id=@item.id">Deteil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

</div>


@section ProductTable{
    <style>
        .product_name {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
    <link href="~/Assets/Admin/css/dataTables/dataTables.bootstrap.css" rel="stylesheet">
    <link href="~/Assets/Admin/css/dataTables/dataTables.responsive.css" rel="stylesheet">
    <script src="~/Assets/Admin/js/dataTables/jquery.dataTables.min.js"></script>
    <script src="~/Assets/Admin/js/dataTables/dataTables.bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });

            $(document).on('click', '#delete-product-btn', function (e) {
                e.preventDefault();
                let name = $(this).data('name');
                let id = Number($(this).data('idpro'));
                let isConfirm = confirm("Are you really want to delete \"" + name + "\" ?");
                if (isConfirm) {
                    $.ajax({
                        url: "/Admin/Table/DeleteProduct",
                        method: "POST",
                        data: { proid: id },
                        success: function (data) {
                            alert("Delete successfully!");
                            window.location.href = "/Admin/Table/ProductTable";
                        },
                        error: function() {
                            alert("error!");
                        },
                    });
                }
            })
        });
    </script>

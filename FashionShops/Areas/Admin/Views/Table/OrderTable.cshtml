@model IEnumerable<FashionShops.Order>
@{
    ViewBag.Title = "OrderTable";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Order Table</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row" style="margin-bottom: 20px;">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    DataTables Advanced Tables
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer ID</th>
                                    <th>Order date</th>
                                    <th>Origin price</th>
                                    <th>Reduce price</th>
                                    <th>Transport fee</th>
                                    <th>Total</th>
                                    <th>Order status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="">
                                        <td>@item.order_id</td>
                                        <td class="product_name">@item.customer_id</td>
                                        <td>@item.order_date</td>
                                        <td class="center">@item.original_price&#8363;</td>
                                        <td class="center">@item.reduced_price&#8363;</td>
                                        <td class="center">@item.transport_fee&#8363;</td>
                                        <td class="center">@item.total_price&#8363;</td>
                                        <td class="center">@item.order_status</td>
                                        <td class="center">
                                            <a href="/Admin/Table/EditOrder?orderId=@item.order_id">Edit</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

</div>

@section ProductTable{
    <style>
        .product_name {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
    <link href="~/Assets/Admin/css/dataTables/dataTables.bootstrap.css" rel="stylesheet">
    <link href="~/Assets/Admin/css/dataTables/dataTables.responsive.css" rel="stylesheet">
    <script src="~/Assets/Admin/js/dataTables/jquery.dataTables.min.js"></script>
    <script src="~/Assets/Admin/js/dataTables/dataTables.bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
}

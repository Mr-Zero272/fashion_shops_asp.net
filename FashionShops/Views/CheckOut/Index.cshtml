                                    <input type="checkbox" name="size" id="" class="size-checkbox-value" hidden
                                           value="2">
                                    <input type="checkbox" name="size" id="" class="size-checkbox-value" hidden
                                           value="3">
                                    <input type="checkbox" name="size" id="" class="size-checkbox-value" hidden
                                           value="4">
                                    <input type="checkbox" name="size" id="" class="size-checkbox-value" hidden
                                           value="5">
                                    <input type="checkbox" name="size" id="" class="size-checkbox-value" hidden
                                           value="6">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" form="paymentMethods" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>


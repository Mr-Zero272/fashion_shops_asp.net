
@{
    ViewBag.Title = "showFormLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper">
    <div class="inner">
        <div class="image-holder">
            <img class="img-login" src="~/Content/images/registration-form-4.jpeg" alt="">
        </div>
        <form action="/Login/Check" method="post">
            <h3>Sign In</h3>
            <div class="form-holder active-login">
                <input type="text" name="username" placeholder="username" class="form-control-login">
            </div>
            <div class="form-holder">
                <input type="password" name="password" placeholder="Password" class="form-control-login" style="font-size: 15px;">
            </div>
            <div class="font-italic" style="color: red">@ViewBag.error</div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" checked> Remember password
                    <span class="checkmark"></span>
                </label>
            </div>
            <div class="form-login">
                <button class="button-login">Sign in</button>
                <p>Don't Have account? <a href="/Register/showFormRegister" class="link-login">Register</a></p>
            </div>
        </form>
    </div>
</div>

